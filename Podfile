# Uncomment the next line to define a global platform for your project
platform :ios, '11.0'

target 'RxMVVM' do
    # Comment the next line if you don't want to use dynamic frameworks
    use_frameworks!

    # Pods for RxMVVM
    # Rx
    pod 'RxSwift', '~> 5'
    pod 'RxCocoa', '~> 5'
    pod 'RxDataSources', '~> 4.0'
    
    # Network
    pod 'Alamofire', '~> 5.0'
    
    # Layout
    pod 'SnapKit', '~> 5.0.0'
    
    # DI
    pod 'JSInject'

    target 'RxMVVMTests' do
        inherit! :search_paths
        # Pods for testing
    end
end
